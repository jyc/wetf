{
	"compilerOptions": {
		"lib": ["ES2020", "DOM"],
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"removeComments": true,
		"declaration": true,
		"declarationDir": "types",
		"noEmit": true
	},
	"include": ["index.js"]
}